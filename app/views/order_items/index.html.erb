<h1>Listing order_items</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Status</th>
      <th>Stock type</th>
      <th>Unit</th>
      <th>Packaging</th>
      <th>Order</th>
      <th>Stock type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.status %></td>
        <td><%= order_item.stock_type %></td>
        <td><%= order_item.unit %></td>
        <td><%= order_item.packaging %></td>
        <td><%= order_item.order %></td>
        <td><%= order_item.stock_type %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

