<%= simple_form_for(@order_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quantity %>
    <%= f.input :status %>
    <%= f.input :stock_type %>
    <%= f.input :unit %>
    <%= f.input :packaging %>
    <%= f.association :order %>
    <%= f.association :stock_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
